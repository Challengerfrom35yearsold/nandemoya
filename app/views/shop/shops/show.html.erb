<div class="container px-md-0">
  <div class="col-md-7 border border-dark rounded mx-auto px-md-4">
    <div class="my-md-3">
      <h2>登録情報</h2>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        ショップ名:
      </div>
      <div class="col-md-9">
        <%= @shop.shop_name %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        フリガナ:
      </div>
      <div class="col-md-9">
        <%= @shop.shop_name_kana %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        ジャンル:
      </div>
      <div class="col-md-9">
        <%= @shop.shop_genre_id %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        郵便番号:
      </div>
      <div class="col-md-9">
        <%= @shop.postal_code %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        住所:
      </div>
      <div class="col-md-9">
        <%= @shop.address %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        電話番号:
      </div>
      <div class="col-md-9">
        <%= @shop.telephone_number %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        メールアドレス:
      </div>
      <div class="col-md-9">
        <%= @shop.email %>
      </div>
    </div>
    <div class="row mb-md-2">
      <div class="col-md-4 font-weight-bold mx-auto">
        <%= link_to "編集する", shop_my_page_information_edit_path, class:"btn btn-success btn-block" %>
      </div>
    </div>
  </div>

  <div class="col-md-7 mx-auto mt-md-5 px-md-4">
    <div class="mb-md-3">
      <h2>リンク</h2>
    </div>
    <div class="col-md-7 mb-md-3">
      <%= link_to "ショップページを見る", shop_shop_page_path, class:"btn btn-primary btn-block" %>
    </div>
    <div class="col-md-7 mb-md-3">
      <%= link_to "DM登録会員一覧を見る", shop_favorite_shops_path, class:"btn btn-primary btn-block" %>
    </div>
  </div>
</div>