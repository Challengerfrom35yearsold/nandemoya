<div class="container">
  <div class="row">
    <div class="col-md-4 mb-5 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">商品ジャンル一覧・追加</h3>
    </div>
  </div>

  <%= form_with model: @item_genre,url: admin_item_genres_path,method: :post do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-2 mb-4">
        ジャンル名
      </div>
      <div class="col-md-4 mb-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-2 mb-4">
        <%= f.submit '新規登録', class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
  </div>

  <table class="table col-md-6">
    <thead>
      <tr>
        <th style="background-color: #c1c7cd !important;">ジャンルID</th>
        <th style="background-color: #c1c7cd !important;">ジャンル名</th>
        <th style="background-color: #c1c7cd !important;"></th>
      </tr>
    </thead>
    <tbody>
      <% @item_genres.each do |item_genre| %>
      <tr>
        <td>
          <%= item_genre.id %>
        </td>
        <td>
          <%= item_genre.name %>
        </td>
        <td class="col-md-4">
          <%= link_to '編集する',  edit_admin_item_genre_path(item_genre.id), class:"btn btn-success btn-block" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
