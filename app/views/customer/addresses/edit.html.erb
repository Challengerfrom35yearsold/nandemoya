<div class="container">
  <div class="row">
    <div class="col-md-4 mb-4 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">配送先編集</h3>
    </div>
  </div>

  <%= form_with model: @address,url: address_path, method: :patch  do |f| %>
  <div class="row">
    <div class="col-md-3 mb-2">
      宛先
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :name, class: "rounded" %> <br />
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mb-2">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :postal_code, class: "rounded" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mb-2">
      住所
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :address, size: "75", class: "rounded" %>
    </div>
  </div>

    <div class="col-md-3 offset-md-3">
      <%= f.submit '変更内容を保存', class:"btn btn-success btn-block" %>
    </div>
  </div>
<% end %>