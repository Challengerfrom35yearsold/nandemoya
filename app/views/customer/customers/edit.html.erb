<div class="container">
  <div class="row">
    <div class="col-md-4 mb-4 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">会員情報編集</h3>
    </div>
  </div>

  <%= form_with model: @customer,url: customers_information_path,method: :patch do |f| %>
  <div class="row">
    <div class="col-md-2 mb-2">
      氏名
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :last_name, class: "rounded" %>
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :first_name, class: "rounded" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      フリガナ
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :last_name_kana, class: "rounded" %>
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :first_name_kana, class: "rounded" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      郵便番号
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :postal_code, class: "rounded" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      住所
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :address, size: "75", class: "rounded" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      電話番号
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :telephone_number, class: "rounded" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      メールアドレス
    </div>
    <div class="col-md-3 mb-2">
      <%= f.text_field :email, class: "rounded" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 offset-md-2">
      <%= f.submit '編集内容を保存', class:"btn btn-success btn-block" %>
    </div>
  <% end %>
    <div class="col-md-3 offset-md-1">
      <%= link_to '退会する',  customers_unsubscribe_path, class:"btn btn-danger btn-block" %>
    </div>
  </div>
</div>