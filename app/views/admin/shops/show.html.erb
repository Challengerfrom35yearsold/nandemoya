<div class="container">
  <div class="row">
    <div class="col-md-6 mb-3 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">
        <%= @shop.shop_name %>さんのショップ情報詳細
      </h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 mb-2">
      ショップID
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.id %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      ショップ名
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.shop_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      フリガナ
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.shop_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      ジャンル
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.shop_genre_id %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      郵便番号
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      住所
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.address %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      電話番号
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.telephone_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      メールアドレス
    </div>
    <div class="col-md-5 mb-2">
      <%= @shop.email %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      ステータス
    </div>
    <div class="col-md-5 mb-2">
      <% if @shop.is_deleted == false %>
        <p class="text-success">有効</p>
      <% else %>
        <p class="text-secondary">退会</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 offset-md-2 ">
      <%= link_to "編集する", edit_admin_shop_path(@shop.id), class:"btn btn-success btn-block" %>
    </div>
    <div class="col-md-3 offset-md-1 ">
      <%= link_to "ショップページを編集する", admin_shop_page_information_edit_path, class:"btn btn-primary btn-block" %>
    </div>
    <div class="col-md-3 offset-md-2 ">
      <%= link_to "商品一覧", admin_items_per_shop_path(@shop.id), class:"btn btn-success btn-block" %>
    </div>
    <div class="col-md-3 offset-md-1 ">
      <%= link_to "注文履歴一覧を見る", admin_orders_path, class:"btn btn-primary btn-block" %>
    </div>
  </div>
</div>