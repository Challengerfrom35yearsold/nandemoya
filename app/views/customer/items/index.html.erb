<div class="container px-5 px-sm-0">
  <div class="row">
    <h3 class="col-md-12">商品一覧</h3>
    <% @items.each do |item| %>
    <div class="d-flex col-md-3 mb-3 align-items-center justify-content-center">
      <%= link_to item_path(item.id) do %>
        <div class="mb-2"><%= image_tag item.get_item_image(200,200) %></div>
        <div class="text-center">
          <%= item.name %> <br />
          ￥<%= item.price.to_s(:delimited) %>
        </div>
      <% end %>
    </div>
    <% end %>
    <div class="d-flex col-12 justify-content-center">
      <%= paginate @items %>
    </div>
  </div>
</div>