<div class="container px-md-0">
  <div class="row">
    <div class="col-md-12 offset-md-4 mt-5 mb-3">
      <h2>管理者ログイン</h2>
    </div>
  </div>
  <%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="row">
    <div class="col-md-5 offset-md-4 mb-2 font-weight-bold">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, placeholder: "sumple@example.com", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 offset-md-4 mb-2 font-weight-bold">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-4 mb-5">
      <%= f.submit "ログイン", class:"btn btn-primary btn-block" %>
    </div>
  </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>
