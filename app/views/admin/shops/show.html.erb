<div class="container px-md-0">
  <div class="col-md-7 border border-dark rounded mx-auto px-md-4">
    <div class="my-md-3">
      <h2>ショップ情報詳細</h2>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        ショップID:
      </div>
      <div class="col-md-9">
        <%= @shop.id %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        ショップ名:
      </div>
      <div class="col-md-9 text_break">
        <%= @shop.shop_name %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        フリガナ:
      </div>
      <div class="col-md-9 text_break">
        <%= @shop.shop_name_kana %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        ジャンル:
      </div>
      <div class="col-md-9">
        <%= @shop.shop_genre_id %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        郵便番号:
      </div>
      <div class="col-md-9">
        <%= @shop.postal_code %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        住所:
      </div>
      <div class="col-md-9 text_break">
        <%= @shop.address %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        電話番号:
      </div>
      <div class="col-md-9">
        <%= @shop.telephone_number %>
      </div>
    </div>
    <div class="row mb-md-2 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        メールアドレス:
      </div>
      <div class="col-md-9 text_break">
        <%= @shop.email %>
      </div>
    </div>
    <div class="row mb-md-3 border-bottom border-dark">
      <div class="col-md-3 font-weight-bold">
        ステータス:
      </div>
      <div class="col-md-9">
        <% if @shop.is_deleted == false %>
          <div class="text-success">有効</div>
        <% else %>
          <div class="text-secondary">退会</div>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 mb-md-3 mx-auto">
      <%= link_to "編集する", edit_admin_shop_path(@shop.id), class:"btn btn-success btn-block" %>
    </div>
  </div>
</div>