<div class="container px-md-0">
  <div class="col-md-7 border border-dark rounded mx-auto px-md-4">
    <div class="my-md-3">
      <h2>ショップ情報編集</h2>
    </div>
    <%= form_with model: @shop,url: admin_shop_path, method: :patch  do |f| %>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :shop_name, "ショップ名" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :shop_name, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :shop_name_kana, "フリガナ" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :shop_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :postal_code, "郵便番号" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :telephone_number, "電話番号" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          会員ステータス
        </div>
        <div class="col-md-8">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効", value: false %>
          &nbsp;
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会", value: true %>
        </div>
      </div>
      <div class="row mb-md-3">
        <div class="col-md-6 mx-auto">
          <%= f.submit '編集内容を保存', class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>