<div class="container px-md-0">
  <div class="col-md-7 border border-dark rounded mx-auto px-md-4">
    <div class="my-md-3">
      <h2>登録情報編集</h2>
    </div>
    <%= form_with model: @customer,url: customers_information_path,method: :patch do |f| %>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :last_name, "名前(性)" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :first_name, "名前(名)" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :last_name_kana, "フリガナ(性)" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :first_name_kana, "フリガナ(名)" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :postal_code, "郵便番号" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-2">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :telephone_number, "電話番号" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-3">
        <div class="col-md-4 font-weight-bold">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-md-3">
        <div class="col-md-6 mx-auto">
          <%= f.submit '編集内容を保存', class:"btn btn-success btn-block" %>
        </div>
      </div>
    <% end %>
    <div class="row mb-md-3">
      <div class="col-md-6 mx-auto">
        <%= link_to '退会する',  customers_unsubscribe_path, class:"btn btn-danger btn-block" %>
      </div>
    </div>
  </div>
</div>