<div class="container px-md-0">
  <div class="col-md-7 border border-dark rounded mx-auto mb-md-3 px-md-4">
    <div class="row my-md-3 px-md-3">
      <h2>商品一覧</h2>
      <div class="col-md-3 ml-md-5">
        <%= link_to"新規登録", new_shop_item_path, class:"btn btn-success btn-block" %>
      </div>
    </div>
    <% @items.each do |item| %>
      <div class="col-md-12 border border-dark rounded mx-auto mb-md-3 px-md-4">
        <div class="row my-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            商品ID:
          </div>
          <div class="col-md-9">
            <%= item.id %>
          </div>
        </div>
        <div class="row mb-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            商品名:
          </div>
          <div class="col-md-9 text_break">
            <%= item.name %>
          </div>
        </div>
        <div class="row mb-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            税抜価格:
          </div>
          <div class="col-md-9">
            <%= "#{item.price.to_s(:delimited)}円" %>
          </div>
        </div>
        <div class="row mb-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            ジャンル:
          </div>
          <div class="col-md-9">
            <%= item.item_genre.name %>
          </div>
        </div>
        <div class="row mb-md-3 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            ステータス:
          </div>
          <div class="col-md-9">
            <% if item.is_active == true %>
              <div class="text-success">販売中</div>
            <% else %>
              <div class="text-secondary">販売停止中</div>
            <% end %>
          </div>
        </div>
        <div class="col-md-6 mb-md-3 mx-auto">
          <%= link_to "商品詳細情報を見る", shop_item_path(item.id), class:"btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    <div class="d-flex col-12 justify-content-center">
      <h4><%= paginate @items %></h4>
    </div>
  </div>
</div>

