<div class="container">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">配送先一覧</h3>
    </div>
  </div>

  <%= link_to "新規登録", new_address_path, class:"btn btn-success" %>

  <% @addresses.each do |address| %>
  <div class="row">
    <div class="col-md-2 mb-2">
      宛名
    </div>
    <div class="col-md-2 mb-2">
      <%= address.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      郵便番号
    </div>
    <div class="col-md-2 mb-2">
      <%= address.postal_code %>
    </div>
    </div>
  <div class="row">
    <div class="col-md-2 mb-2">
      住所
    </div>
    <div class="col-md-2 mb-2">
      <%= address.address %>
    </div>
  </div>

  <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %>
  <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
  <% end %>
</div>
