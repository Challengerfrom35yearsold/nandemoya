<div class="container px-md-0">
  <div class="col-md-12 border border-dark rounded mx-auto mb-md-3 px-md-4">
    <div class="row my-md-3 border-bottom border-dark">
      <div class="col-md-3">
        <h2>商品一覧</h2>
      </div>
      <div class="col-md-9 d-flex align-items-center justify-content-end">
        <div class="col-md-3">
          <%= link_to "価格が高い順", items_per_shop_path(price_order: "desc"), class:"btn btn-success btn-block" %>
        </div>
        <div class="col-md-3">
          <%= link_to "価格が安い順", items_per_shop_path(price_order: "asc"), class:"btn btn-success btn-block" %>
        </div>
      </div>
    </div>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-3 mb-md-4">
          <div class="card">
            <%= link_to item_path(item.id) do %>
              <div class="d-flex align-items-center justify-content-center pt-md-4">
                <%= image_tag item.get_item_image(200,200), :size => '200x200' %>
              </div>
              <div class="card-body">
                <div class="card-text text-dark">
                  <div class="row">
                    <div class="col-md-12">
                      商品名:
                    </div>
                  </div>
                  <div class="row mb-md-2 border-bottom border-dark">
                    <div class="col-md-12 text_break">
                      <%= item.name %>
                    </div>
                  </div>
                  <div class="row border-bottom border-dark">
                    <div class="col-md-6">
                      価格(税込):
                    </div>
                    <div class="col-md-6">
                      <%= "#{item.with_tax_price.to_s(:delimited)}円" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex col-12 justify-content-center">
      <h4><%= paginate @items %></h4>
    </div>
  </div>
</div>