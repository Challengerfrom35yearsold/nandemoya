<div class="container px-sm-0">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center pb-3">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">問い合わせ一覧</h3>
    </div>
  </div>
  <% @customer_inquiries.each do |customer_inquiry| %>
    問い合わせ日時<br />
    <%= l customer_inquiry.created_at %><br />
    <%= "#{customer_inquiry.customer.last_name + customer_inquiry.customer.first_name}さんからの問い合わせ" %><br />

    問い合わせ進捗状態<%= customer_inquiry.inquiry_status_i18n %><br />
    問い合わせ商品/商品番号<br />
    <%= customer_inquiry.item.name %>/<%= customer_inquiry.item.id %><br />
    タイトル<br />
    <%= customer_inquiry.title %><br />
    お問い合わせ内容<br />
    <%= customer_inquiry.inquiry %><br />
    <div class="row">
    <% customer_inquiry.customer_inquiry_threads.each do |customer_inquiry_thread| %>
      <% if customer_inquiry_thread.speaker_type == "customer" %>
        <%= customer_inquiry_thread.message %>
      <% else customer_inquiry_thread.speaker_type == "shop" %>
      <div class="col-md-2 offset-md-2 mb-2">
        <%= customer_inquiry_thread.message %>
      </div>
      <% end %>
    <% end %>
    </div>
  <% end %>
</div>