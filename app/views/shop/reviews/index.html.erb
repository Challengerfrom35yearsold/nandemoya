<div class="container px-sm-0">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;"><%= "#{@item.name}のレビュー一覧" %></h3>
    </div>
  </div>
  <% @item_reviews.each do |item_review| %>
    <%= item_review.created_at.strftime('%Y/%m/%d') %><br />
    <div id="post_raty<%= item_review.id %>"></div>
    <script>
      $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#post_raty<%= item_review.id %>');
        if (elem == null) return;
        elem.innerHTML = ""
        let opt = {
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          score: '<%= item_review.number_of_stars %>',
          readOnly: true,
        };
        raty(elem, opt);
      });
    </script>
    タイトル
    <%= item_review.title %><br />
    本文
    <%= item_review.review_content %><br />
  <% end %>
</div>
