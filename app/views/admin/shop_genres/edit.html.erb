<div class="container">
  <div class="row">
    <div class="col-md-4 mb-5 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">ショップジャンル編集</h3>
    </div>
  </div>

  <%= form_with model: @shop_genre,url: admin_shop_genre_path,method: :patch do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-2 mb-4">
        ジャンル名
      </div>
      <div class="col-md-4 mb-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-2 mb-4">
        <%= f.submit '変更を保存', class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
  </div>
</div>