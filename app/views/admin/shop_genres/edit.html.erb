<div class="container px-md-0">
  <div class="col-md-7 border border-dark rounded mx-auto px-md-4">
    <div class="row my-md-3 px-md-3">
      <h2>ショップジャンル編集</h2>
    </div>
    <%= form_with model: @shop_genre,url: admin_shop_genre_path,method: :patch do |f| %>
     <div class="row mb-md-3">
        <div class="col-md-3 font-weight-bold">
          <%= f.label :name, "ジャンル名" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-md-3 mb-md-3 mx-auto">
          <%= f.submit '変更を保存', class:"btn btn-success btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>