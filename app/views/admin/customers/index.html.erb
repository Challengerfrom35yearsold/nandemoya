<div class="container">
  <div class="row">
    <div class="col-md-4 mb-3 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">会員一覧</h3>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th style="background-color: #c1c7cd !important;">会員ID</th>
        <th style="background-color: #c1c7cd !important;">氏名</th>
        <th style="background-color: #c1c7cd !important;">メールアドレス</th>
        <th style="background-color: #c1c7cd !important;">ステータス</th>
        <th style="background-color: #c1c7cd !important;">お気に入り</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name + customer.first_name %>
          <% end %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <% if customer.is_deleted == false %>
            <p class="text-success">有効</p>
          <% else %>
            <p class="text-secondary">退会</p>
          <% end %>
        </td>
        <td>
          <!--<div class="col-md-2 pb-1">-->
            <%= link_to "ショップ", admin_favorite_shops_path(:customer_id => customer.id), class:"btn btn-primary btn-block" %>
            <%= link_to "商品", admin_what_you_wants_path(:customer_id => customer.id), class:"btn btn-primary btn-block" %>
          <!--</div>-->
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-7 mt-4 offset-md-5">
    <%= paginate @customers %>
  </div>
</div>
