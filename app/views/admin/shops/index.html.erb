<div class="container">
  <div class="row">
    <div class="col-md-4 mb-3 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">ショップ一覧</h3>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th style="background-color: #c1c7cd !important;">ショップID</th>
        <th style="background-color: #c1c7cd !important;">ショップ名</th>
        <th style="background-color: #c1c7cd !important;">メールアドレス</th>
        <th style="background-color: #c1c7cd !important;">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @shops.each do |shop| %>
      <tr>
        <td>
          <%= shop.id %>
        </td>
        <td>
          <%= link_to admin_shop_path(shop.id) do %>
            <%= shop.shop_name %>
          <% end %>
        </td>
        <td>
          <%= shop.email %>
        </td>
        <td>
          <% if shop.is_deleted == false %>
            <p class="text-success">有効</p>
          <% else %>
            <p class="text-secondary">退会</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-7 mt-4 offset-md-5">
    <%= paginate @shops %>
  </div>
</div>