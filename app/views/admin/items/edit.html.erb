<div class="container">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">商品編集</h3>
    </div>
  </div>

  <%= form_with model: @item,url: admin_item_path, method: :patch  do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-2 mb-2 offset-md-3">
        商品画像
      </div>
      <div class="col-md-4 mb-2">
      <%= f.file_field :images, accept: "image/*", multiple: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 mb-2 offset-md-3">
        商品名
     </div>
      <div class="col-md-4 mb-2">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 mb-2 offset-md-3">
        ジャンル
      </div>
      <div class="col-md-4 mb-2">
        <%= f.select :genre_id, options_from_collection_for_select(ItemGenre.all, :id, :name), {}, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 mb-2 offset-md-3">
        商品説明
      </div>
      <div class="col-md-4 mb-2">
        <%= f.text_field :introduction, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 mb-2 offset-md-3">
        税抜価格
      </div>
      <div class="col-md-4 mb-2">
        <%= f.text_field :price, class: "form-control" %>
      </div>
      <div class="col-md-1 mb-2 d-flex align-items-center">
        円
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 mb-2 offset-md-3">
        販売ステータス
      </div>
      <div class="col-md-4 mb-2">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止" %>
      </div>
    </div>
    <div class="col-md-4 offset-md-4">
      <%= f.submit '変更を保存', class:"btn btn-success btn-block" %>
    </div>
    <% end %>
  </div>
</div>