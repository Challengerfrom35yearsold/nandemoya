<div class="container px-sm-0">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">レビュー一覧</h3>
    </div>
  </div>
  <% @reviews.each do |review| %>
    <%= review.created_at.strftime('%Y/%m/%d') %><br />
    <div id="post_raty<%= review.id %>"></div>
    <script>
      $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#post_raty<%= review.id %>');
        if (elem == null) return;
        elem.innerHTML = ""
        let opt = {
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          score: '<%= review.number_of_stars %>',
          readOnly: true,
        };
        raty(elem, opt);
      });
    </script>
    タイトル
    <%= review.title %><br />
    本文
    <%= review.review_content %><br />
    <%= link_to "編集する", edit_item_review_path(review.item_id,review.id)%>
    <%= link_to "削除する", item_review_path(review.item_id,review.id), method: :delete %><br />
  <% end %>
</div>
