<div class="container px-md-0">
  <div class="col-md-7 border border-dark rounded mx-auto mb-md-3 px-md-4">
    <div class="my-md-3">
      <h2>ショップ一覧</h2>
    </div>
    <% @shops.each do |shop| %>
      <div class="col-md-12 border border-dark rounded mx-auto mb-md-3 px-md-4">
        <div class="row my-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            ショップID:
          </div>
          <div class="col-md-9">
            <%= shop.id %>
          </div>
        </div>
        <div class="row mb-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            ショップ名:
          </div>
          <div class="col-md-9 text_break">
            <%= shop.shop_name %>
         </div>
        </div>
        <div class="row mb-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            メールアドレス:
          </div>
          <div class="col-md-9 text_break">
            <%= shop.email %>
          </div>
        </div>
        <div class="row mb-md-2 border-bottom border-dark">
          <div class="col-md-3 font-weight-bold">
            ステータス:
          </div>
          <div class="col-md-9">
            <% if shop.is_deleted == false %>
              <div class="text-success">有効</div>
            <% else %>
              <div class="text-secondary">退会</div>
            <% end %>
          </div>
        </div>
        <div class="col-md-6 mb-md-3 mx-auto">
          <%= link_to "ショップ情報詳細を見る", admin_shop_path(shop.id), class:"btn btn-primary btn-block"  %>
        </div>
        <div class="col-md-6 mb-md-3 mx-auto">
          <%= link_to "ショップページへ", admin_shop_shop_page_path(shop.id), class:"btn btn-primary btn-block" %>
        </div>
        <div class="col-md-6 mb-md-3 mx-auto">
          <%= link_to "商品一覧", admin_items_per_shop_path(shop.id), class:"btn btn-primary btn-block" %>
        </div>
        <div class="col-md-6 mb-md-3 mx-auto">
          <%= link_to "注文履歴一覧を見る", admin_orders_path, class:"btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    <div class="d-flex col-12 justify-content-center">
      <h4><%= paginate @shops %></h4>
    </div>
  </div>
</div>