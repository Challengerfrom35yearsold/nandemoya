<div class="container px-sm-0">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center pb-3">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">問い合わせ中</h3>
      <div class="col-md-4">
        <%= link_to '過去のお問い合わせへ',  customer_inquiries_path, class:"btn btn-success btn-block" %>
      </div>
    </div>
  </div>
  <% @customer_inquiries.each do |customer_inquiry| %>
    <% if customer_inquiry.inquiry_status == "resolution" %>
      問い合わせ日時<br />
      <%= l customer_inquiry.created_at %><br />
      問い合わせ進捗状態<%= customer_inquiry.inquiry_status_i18n %><br />
      問い合わせショップ名<br />
      <%= customer_inquiry.shop.shop_name %><br />
      問い合わせ商品/商品番号<br />
      <%= customer_inquiry.item.name %>/<%= customer_inquiry.item.id %><br />
      タイトル<br />
      <%= customer_inquiry.title %><br />
      お問い合わせ内容<br />
      <%= customer_inquiry.inquiry %><br />
      <div class="row">
      <% customer_inquiry.customer_inquiry_threads.each do |customer_inquiry_thread| %>
        <% if customer_inquiry_thread.speaker_type == "customer" %>
          <%= customer_inquiry_thread.message %><br />
        <% else customer_inquiry_thread.speaker_type == "shop" %>
        <div class="col-md-2 offset-md-2 mb-2">
          <%= customer_inquiry_thread.message %>
        </div>
        <% end %>
      <% end %>
      </div>
      <div class="col-md-4">
        <%= link_to '問題が解決した場合はこちらをクリックしてください。',  customer_inquiry_path(customer_inquiry.id), method: :patch, class:"btn btn-success btn-block" %>
      </div>
      <%= form_with model: @customer_inquiry_thread,url: customer_inquiry_threads_path,method: :post  do |f| %>
      <div class="form-group">
        <div class="row">
          <div class="col-md-2 mb-2 offset-md-3">
            <%= f.text_area :message, placeholder: "回答に対する返答を入力してください", class: "form-control" %>
          </div>
        </div>
        <%= f.hidden_field :customer_inquiry_id, :value => customer_inquiry.id %>
        <div class="col-md-4 offset-md-4">
          <%= f.submit '返答する', class:"btn btn-success btn-block" %>
        </div>
      </div>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>

