<div class="container px-md-0">
  <div class="col-md-12 border border-dark rounded mx-auto mb-md-5 px-md-4">
    <div class="row my-md-3 border-bottom border-dark">
      <h2>ショップページ登録情報</h2>
      <div class="col-md-3 ml-md-5">
        <%= link_to '編集する',  shop_shop_page_information_edit_path, class:"btn btn-success btn-block" %>
      </div>
    </div>

    <% if @shop.rogo_arrangement_btn == "left_alignment" %>
      <div class="col-md-5 mb-md-3">
        <%= image_tag @shop.get_shop_image(200,200) %>
      </div>
    <% elsif @shop.rogo_arrangement_btn == "center_alignment" %>
      <div class="d-flex mb-md-5 align-items-center justify-content-center">
        <%= image_tag @shop.get_shop_image(200,200) %>
      </div>
    <% else %>
      <div class="d-flex mb-md-5 align-items-center justify-content-end">
        <%= image_tag @shop.get_shop_image(200,200) %>
      </div>
    <% end %>

    <% if @shop.introduction_arrangement_btn == "side_by_side" %>
      <div class="row">
        <% @shop.get_shop_images(250,250).each do |image| %>
        <div class="d-flex col-md-3 mb-md-3 p-md-2 align-items-center justify-content-center border border-dark ">
          <%= image_tag image %>
        </div>
        <% end %>
      </div>
    <% else %>
      <% @shop.get_shop_images(700,700).each do |image| %>
        <div class="d-flex mb-md-3 align-items-center justify-content-center">
          <%= image_tag image %>
        </div>
      <% end %>
    <% end %>

    <div class="row mb-md-2 align-items-center justify-content-center">
      <div class="col-md-5">
        <div class="font-weight-bold">配送キャリア:</div>
        <div class="text_break"><%= @shop.shipping_carrier %></div>
      </div>
      <div class="col-md-5">
        <div class="font-weight-bold">発送について:</div>
        <div class="text_break"><%= @shop.about_shipping %></div>
      </div>
    </div>

    <div class="row mb-md-2 align-items-center justify-content-center">
      <div class="col-md-5">
        <div class="font-weight-bold">個人情報の取り扱いについて:</div>
        <div class="text_break"><%= @shop.personal_information %></div>
      </div>
      <div class="col-md-5">
        <div class="font-weight-bold">決済について:</div>
        <div class="text_break"><%= @shop.settlement %></div>
      </div>
    </div>

    <div class="row mb-md-2 align-items-center justify-content-center">
      <div class="col-md-5">
        <div class="font-weight-bold">お問い合わせについて:</div>
        <div class="text_break"><%= @shop.inquiry %></div>
      </div>
      <div class="col-md-5">
      </div>
    </div>
  </div>
</div>